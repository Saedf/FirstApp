<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="DrawerArroStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item>
</style>
    <style name="button_primary_style">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/selector_primary_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="button_accent_style">
        <item name="android:background">@drawable/selector_accent_button</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="animations_button_primary" parent="button_primary_style">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>
    <style name="animations_button_accent" parent="button_accent_style">
         <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>
</resources>
